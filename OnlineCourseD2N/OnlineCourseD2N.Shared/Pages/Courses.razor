@page "/courses"
@inject NavigationManager Nav
@using OnlineCourseD2N.Shared.Models
@using OnlineCourseD2N.Shared.Services
@inject CourseService CourseService
@inject TrainerService TrainerService

<h3 class="mb-3">Manajemen Courses</h3>

@if (courses == null || trainers == null)
{
    <p><em>Memuat data...</em></p>
}
else
{
    @if (!string.IsNullOrEmpty(alertMessage))
    {
        <div class="alert alert-@alertType fade show position-fixed top-0 start-50 translate-middle-x mt-3 shadow"
             role="alert" style="z-index: 1050; min-width: 300px;">
            @alertMessage
        </div>
    }

    <div class="mb-3 d-flex justify-content-between align-items-center">
        <input class="form-control w-50"
               placeholder="Cari course..."
               @bind="SearchTerm"
               @bind:event="oninput" />
        <button class="btn btn-primary mb-3" @onclick="ShowAddModal">Tambah Course</button>
    </div>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>Description</th>
                <th>Trainer</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in filteredCourses ?? [])
            {
                <tr>
                    <td><img src="http://localhost:5034/uploads/@c.CoverImage" alt="@c.CoverImage" width="200" class="rounded shadow" /></td>
                    <td>@c.Title</td> 
                    <td>@c.Description</td>
                    <td>@c.Trainer?.Name</td>
                    <td>
                        <button class="btn btn-sm btn-info me-2" @onclick="() => ViewDetail(c.CourseId)">Detail</button>
                        <button class="btn btn-sm btn-warning me-2" @onclick="() => ShowEditModal(c)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => AskDeleteCourse(c)">Hapus</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Modal Tambah / Edit -->
    @if (isModalVisible)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title">
                            @(currentCourse.CourseId == 0 ? "Tambah Course" : "Edit Course")
                        </h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <div class="modal-body">
                        <EditForm Model="currentCourse" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label>Title:</label>
                                    <InputText class="form-control" @bind-Value="currentCourse.Title" />
                                </div>

                                <div class="col-md-6">
                                    <label>Category:</label>
                                    <InputText class="form-control" @bind-Value="currentCourse.Category" />
                                </div> 

                                <div class="col-md-12">
                                    <label>Description:</label>
                                    <InputTextArea class="form-control" @bind-Value="currentCourse.Description" />
                                </div>

                                <div class="col-md-4">
                                    <label>Duration (jam):</label>
                                    <InputNumber class="form-control" @bind-Value="currentCourse.Duration" min="0"/>
                                </div>

                                <div class="col-md-4">
                                    <label>Level:</label>
                                    <InputText class="form-control" @bind-Value="currentCourse.Level" />
                                </div>

                                <div class="col-md-4">
                                    <label>Trainer:</label>
                                    <InputSelect class="form-select" @bind-Value="currentCourse.TrainerId">
                                        <option value="0">-- Pilih Trainer --</option>
                                        @foreach (var t in trainers)
                                        {
                                            <option value="@t.TrainerId">@t.Name</option>
                                        }
                                    </InputSelect>
                                </div>

                                <div class="col-md-12">
                                <label>Cover Image</label>
                                <InputFile OnChange="HandleFileSelected" />
                                @if (!string.IsNullOrEmpty(currentCourse.CoverImage))
                                {
                                    <div class="mt-2">
                                        <img src="@($"http://localhost:5034/uploads/{currentCourse.CoverImage}")" alt="cover" width="200" class="rounded shadow" />
                                    </div>
                                }
                                </div>
                            </div>

                            <div class="mt-4 text-end">
                                <button class="btn btn-success me-2" type="submit">
                                    @(currentCourse.CourseId == 0 ? "Tambah" : "Simpan Perubahan")
                                </button>
                                <button class="btn btn-secondary" type="button" @onclick="CloseModal">Batal</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Modal Konfirmasi Hapus -->
    @if (CourseToDelete != null)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">Konfirmasi Hapus</h5>
                    </div>
                    <div class="modal-body">
                        <p>Apakah Anda yakin ingin menghapus course <strong>@CourseToDelete.Title</strong>?</p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" @onclick="CancelDelete">Batal</button>
                        <button class="btn btn-danger" @onclick="ConfirmDelete">Hapus</button>
                    </div>
                </div>
            </div>
        </div>
    }
}

@code {
    private string searchTerm = string.Empty;
    private List<Course>? filteredCourses;
    private List<Course>? courses;
    private List<Trainer>? trainers;

    private Course? CourseToDelete;
    private Course currentCourse = new();
    private bool isModalVisible = false;

    private string? alertMessage;
    private string? alertType;
    private System.Timers.Timer? alertTimer;

    private string SearchTerm
    {
        get => searchTerm;
        set
        {
            searchTerm = value;
            ApplySearch();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        courses = await CourseService.GetAllAsync();
        trainers = await TrainerService.GetAllAsync();
        ApplySearch();
    }

    private void ApplySearch()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            filteredCourses = courses;
        }
        else
        {
            filteredCourses = courses?
                .Where(c =>
                    (c.Title?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (c.Description?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (c.Trainer?.Name?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
                )
                .ToList();
        }
    }


    private void ViewDetail(int id)
    {
        Nav.NavigateTo($"/courses/{id}");
    }

    private void ShowAddModal()
    {
        currentCourse = new();
        isModalVisible = true;
    }

    private void ShowEditModal(Course c)
    {
        currentCourse = new Course
        {
            CourseId = c.CourseId,
            Title = c.Title,
            Description = c.Description,
            Category = c.Category,
            Duration = c.Duration,
            Level = c.Level,
            TrainerId = c.TrainerId
        };
        isModalVisible = true;
    }

    private void CloseModal()
    {
        isModalVisible = false;
        currentCourse = new();
    }

    private async Task HandleSubmit()
    {
        try
        {
            bool success;
            if (currentCourse.CourseId == 0)
                success = await CourseService.AddAsync(currentCourse);
            else
                success = await CourseService.UpdateAsync(currentCourse.CourseId, currentCourse);

            if (success)
            {
                ShowAlert(currentCourse.CourseId == 0
                    ? "Course berhasil ditambahkan!"
                    : "Course berhasil diperbarui!", "success");

                await LoadData();
                CloseModal();
            }
            else
            {
                ShowAlert("Gagal menyimpan course.", "danger");
            }
        }
        catch (Exception ex)
        {
            ShowAlert($"Terjadi kesalahan: {ex.Message}", "danger");
        }
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        var fileName = await CourseService.UploadCoverAsync(file);
        if (!string.IsNullOrEmpty(fileName))
        {
            currentCourse.CoverImage = fileName;
        }
    }

    private void AskDeleteCourse(Course c) => CourseToDelete = c;
    private void CancelDelete() => CourseToDelete = null;

    private async Task ConfirmDelete()
    {
        if (CourseToDelete != null)
        {
            bool success = await CourseService.DeleteAsync(CourseToDelete.CourseId);
            if (success)
            {
                ShowAlert($"Course '{CourseToDelete.Title}' berhasil dihapus.", "success");
                await LoadData();
            }
            else
            {
                ShowAlert($"Gagal menghapus course '{CourseToDelete.Title}'.", "danger");
            }

            CourseToDelete = null;
        }
    }

    private void ShowAlert(string message, string type = "success", int durationMs = 3000)
    {
        alertMessage = message;
        alertType = type;

        alertTimer?.Stop();
        alertTimer = new System.Timers.Timer(durationMs);
        alertTimer.Elapsed += (s, e) =>
        {
            alertMessage = null;
            alertTimer?.Stop();
            InvokeAsync(StateHasChanged);
        };
        alertTimer.Start();

        StateHasChanged();
    }
}
